{
    "compilerOptions": {
        "types": [
            "node"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "removeComments": true,
        "preserveConstEnums": true,
        "stripInternal": true,
        "declaration": true,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}